---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/consultoria.jpg";
import personWorking from "@images/consultoria2.jpg";
import beforeAfter from "@images/app-movil-a-medida.jpg";
import constructionWorkers from "@images/gestion.jpg";
import aerialView from "@images/gestion2.jpg";
import usingTools from "@images/revision.jpg";
import progressBuilding from "@images/despliegue.avif";
import underConstruction from "@images/despliegue3.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Specialized Technical Consultancy",
    subTitle:
      "At DJG, we offer technical consultancy services for software development projects. From strategic planning to solution implementation, our experts guide you in selecting the best technologies and development practices.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Team of developers working on code.",
    imgTwo: personWorking,
    imgTwoAlt: "Developers collaborating in the office.",
  },
  {
    isRightSection: false,
    title: "Custom Application Development",
    subTitle:
      "We create custom applications tailored to the unique needs of your business. Focusing on quality and scalability, our team ensures that every software development project meets the highest standards.",
    img: beforeAfter,
    imgAlt: "Mobile application screens.",
    btnExists: true,
    btnTitle: "More Information",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Software Project Management",
    subTitle:
      "We offer comprehensive software project management services. We handle planning, resource coordination, and stakeholder communication to ensure your project is delivered on time and within budget.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Development team meeting.",
    imgTwo: aerialView,
    imgTwoAlt: "Software architecture in a technical diagram.",
  },
  {
    isRightSection: false,
    title: "Code Review and Best Practices",
    subTitle:
      "We ensure software quality through thorough code reviews and the implementation of best development practices. Our team guarantees clean, efficient, and maintainable code.",
    img: usingTools,
    imgAlt: "Developer reviewing code on a screen.",
  },
  {
    isRightSection: true,
    title: "Continuous Integration and Deployment",
    subTitle:
      "We specialize in implementing CI/CD pipelines to ensure that every code change is deployed safely and efficiently. We help automate the software development lifecycle.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Software deployment process.",
    imgTwo: underConstruction,
    imgTwoAlt: "Software product launch.",
    btnExists: true,
    btnTitle: "Read More",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://DJG.dev/services",
    "url": "https://DJG.dev/services",
    "name": "Software Development Services | DJG",
    "description": "At DJG, we offer complete software development solutions, from technical consulting to the implementation of custom applications.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://DJG.dev",
        "name": "DJG",
        "description": "DJG is a company specialized in software development and innovative technological solutions."
    },
    "inLanguage": "en-US"
  }}
>
<MainSection
title="We Unite Your Vision with Our Experience"
subTitle="At DJG, we specialize in offering complete and customized solutions in the field of software development. Our team is committed to the success of your project, from conception to final deployment."
btnExists={true}
btnTitle="Request a Consultation"
btnURL="#"
img="/src/images/main2.png"
imgAlt="Image description"
/>

  
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesStats
    title="Results that Speak for Themselves"
    subTitle="Our commitment to quality and excellence is reflected in every project. DJG is synonymous with innovation and efficient software development."
    mainStatTitle="98%"
    mainStatSubTitle="client satisfaction rate"
    stats={[
      {
        stat: "97%",
        description: "projects delivered on time",
      },
      {
        stat: "10,000+",
        description: "custom solutions developed",
      },
      {
        stat: "90%",
        description: "client retention rate",
      },
    ]}
  />
</MainLayout>
