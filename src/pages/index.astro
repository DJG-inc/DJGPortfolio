---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.png";
import robust from "@images/robust-software.png";
import tools from "@images/automated-tools.png";
import dashboard from "@images/dashboard-image.png";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore DJG on GitHub"
    url="https://github.com/DJG-Inc"
  />

  <HeroSection
    title=`Build Your Projects with <span
        class="text-pale-500 dark:text-pale-400">DJG</span>`
    subTitle="Top-quality software tools and expert software project development."
    primaryBtn="Explore Our Products"
    primaryBtnURL="/products"
    secondaryBtn="Contact Us"
    secondaryBtnURL="/contact"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of DJG product boxes containing assorted software tools"
  />

  <ClientsSection
    title="Technologies We Use"
    subTitle="DJG is built with the latest technologies, ensuring a seamless experience for our users. If the tech stack you're looking for isn't listed, let us know!"
  />

  <FeaturesGeneral
    title="Meeting Industry Demands"
    subTitle="At DJG, we tackle the unique challenges encountered in the software development industry. Our solutions are designed to meet the demands of modern-day projects and deliver exceptional results in exceptional time."
    src={featureImage}
    alt="DJG products in floating boxes"
    features={features}
  />

  <FeaturesNavs
    title=`Customize <span class="text-pale-500 dark:text-pale-400">DJG</span>'s offerings to perfectly suit your needs.`
    tabs={[
      {
        heading: "Cutting-Edge Tools",
        content:
          "DJG's cutting-edge tools are engineered to deliver top-notch performance. Our products are designed to meet the demands of modern-day projects, ensuring that you get the best results in the shortest time possible.",
        svg: "tools",
        src: tools,
        alt: "pale and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Intuitive Dashboards",
        content:
          "Our intuitive dashboards are designed to provide you with a seamless experience. With DJG, you can easily track your projects, manage your team, and stay on top of your deadlines.",
        svg: "dashboard",
        src: dashboard,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Robust Features",
        content:
          "DJG's robust features are designed to help you get the job done. Our products are engineered to meet the demands of modern-day projects, ensuring that you get the best results in the shortest time possible.",
        svg: "house",
        src: robust,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Fast-Track Your Projects"
    subTitle="At DJG, we ensure a swift start with instant account setup. Experience the speed of construction redefined."
    ;
    testimonials={[
      {
        content:
          "DJG dramatically boosted our project efficiency. We were able to complete our projects in half the time it used to take us. The tools and services provided by DJG are top-notch.",
        author: "Carlos",
        role: "CEO, Intellsis",
        avatarSrc:
          "https://media.licdn.com/dms/image/D4E0BAQEcohTSGrDOcg/company-logo_200_200/0/1697696720463/intellsis_tech_logo?e=2147483647&v=beta&t=nAf4jMtp2fYxqIdIalVSYe2XgiDyY11LUXMz1IfUMZ0",
      },
    ]}
    statistics={[
      {
        count: "5+",
        description: "Projects completed in record time, thanks to DJG's team of experts.",
      },
      {
        count: "99%",
        description:
          "Customer satisfaction rate, with clients praising DJG's top-quality tools.",
      },
      {
        count: "24/7",
        description:
          "Customer support, ensuring that you get the help you need when you need it.",
      },
      {
        count: "100%",
        description:
          "Satisfaction guarantee, ensuring that you get the best results possible.",
      },
      
    ]}
  />


  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="DJG is an open-source template, meticulously crafted with Astro, Tailwind CSS, and Preline UI frameworks."
    url="https://github.com/DJG-Inc"
  />
</MainLayout>
